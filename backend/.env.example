# ===================================
# Database Configuration
# ===================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# ===================================
# Authentication Security
# ===================================
JWT_SECRET=your-256-bit-secret-key-here

# ===================================
# Frontend Configuration
# ===================================
FRONTEND_URL=https://your-domain.com

# ===================================
# Email Service Configuration
# ===================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=service@yourdomain.com
EMAIL_PASS=application-specific-password

# ===================================
# AI/ML Services
# ===================================
# Claude AI (Required for Claude Vision OCR fallback)
CLAUDE_API_KEY=sk-ant-api03-your-key-here

# DeepSeek (Optional - Primary OCR)
DEEPSEEK_API_KEY=your-deepseek-api-key

# ===================================
# Google Cloud Services (Hidden Fallbacks)
# ===================================
# Google Cloud credentials as JSON string
# Get this from Google Cloud Console > IAM & Admin > Service Accounts
# Example: GOOGLE_CLOUD_CREDENTIALS='{"type":"service_account","project_id":"...",...}'
GOOGLE_CLOUD_CREDENTIALS=

# Google Cloud Project Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_LOCATION=us

# Google Cloud Document AI Processor ID
# Create a Document OCR processor in Google Cloud Console
GOOGLE_DOCUMENT_AI_PROCESSOR_ID=your-processor-id

# ===================================
# Feature Control
# ===================================
LLM_FEATURES=prep_checklist,recommendations,email_content,conflict_resolution

# ===================================
# Analytics Integration (Optional)
# ===================================
GOOGLE_ANALYTICS_ID=GA-MEASUREMENT-ID
MIXPANEL_TOKEN=your-mixpanel-project-token
